#include <mem.h>
#include "npcx7.dtsi"

/ {
	flash0: flash@10090000 {
		reg = <0x10090000 DT_SIZE_K(192)>;
	};

	flash1: flash@64000000 {
		reg = <0x64000000 DT_SIZE_M(1)>;
	};

	sram0: memory@200c0000 {
		compatible = "mmio-sram";
		reg = <0x200C0000 DT_SIZE_K(62)>;
	};

	soc-id {
		device-id = <0x21>;
	};
};
