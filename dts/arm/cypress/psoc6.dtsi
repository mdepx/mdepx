			};
			gpio_prt14: gpio@40320700 {
				compatible = "cypress,psoc6-gpio";
				reg = <0x40320700 0x80>;
				interrupts = <14 1>;
				label = "P14";
				gpio-controller;
				ngpios = <2>;
				#gpio-cells = <2>;
				#cypress,pin-cells = <2>;
				status = "disabled";
			};
		};

		spi0: spi@40610000 {
			compatible = "cypress,psoc6-spi";
			reg = <0x40610000 0x10000>;
			interrupts = <41 7>;
			peripheral-id = <0>;
			status = "disabled";
