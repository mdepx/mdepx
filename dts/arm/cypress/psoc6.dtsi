		uart0: uart@40610000 {
			compatible = "cypress,psoc6-uart";
			reg = <0x40610000 0x10000>;
			interrupts = <41 7>;
			peripheral-id = <0>;
			status = "disabled";
			label = "uart_0";
		};
		uart1: uart@40620000 {
			compatible = "cypress,psoc6-uart";
			reg = <0x40620000 0x10000>;
